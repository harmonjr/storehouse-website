---
import Button from '../Button.astro';
import { Image } from 'astro:assets';
import dashboardImage from '../../assets/images/dashboard-screenshot.png';
---

<section class="relative min-h-screen pt-16 flex items-center overflow-hidden bg-gradient-to-br from-storehouse-50 via-storehouse-100 to-emerald-50 grain-overlay">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content -->
      <div class="text-center lg:text-left hero-content">
        <h1 class="font-display text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 leading-tight">
          Finally, breathing room.
        </h1>
        <p class="mt-2 font-display text-xl sm:text-2xl lg:text-3xl font-semibold text-storehouse-600">
          Built on biblical financial principles. Designed for anyone who wants breathing room.
        </p>
        <p class="mt-6 text-lg sm:text-xl text-slate-600 max-w-xl mx-auto lg:mx-0">
          Storehouse shows you one number &mdash; what's truly safe to spend after your priorities are handled.
        </p>

        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <Button href="#how-it-works" variant="primary" size="lg">
            See How It Works
          </Button>
          <Button href="/waitlist" variant="secondary" size="lg">
            Join Waitlist
          </Button>
        </div>

        <p class="mt-4 text-sm text-slate-500">
          Free to start. No credit card required.
        </p>
      </div>

      <!-- Dashboard Screenshot -->
      <div class="relative screenshot-container">
        <div class="absolute -z-10 inset-0 bg-storehouse-400/20 rounded-3xl blur-3xl"></div>
        <div class="relative transform rotate-2 hover:rotate-0 transition-transform duration-500">
          <div class="rounded-2xl shadow-[0_25px_50px_-12px_rgba(0,0,0,0.25)] overflow-hidden border border-slate-200/50">
            <Image
              src={dashboardImage}
              alt="Storehouse dashboard showing Safe to Spend amount"
              class="w-full h-auto"
              loading="eager"
            />
          </div>
        </div>
        <!-- Decorative elements -->
        <div class="absolute -z-10 -top-4 -right-4 w-72 h-72 bg-storehouse-200 rounded-full blur-3xl opacity-40"></div>
        <div class="absolute -z-10 -bottom-8 -left-8 w-64 h-64 bg-emerald-200 rounded-full blur-3xl opacity-30"></div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-content > :global(*) {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .hero-content > :global(*:nth-child(1)) {
    animation-delay: 0.1s;
  }

  .hero-content > :global(*:nth-child(2)) {
    animation-delay: 0.2s;
  }

  .hero-content > :global(*:nth-child(3)) {
    animation-delay: 0.3s;
  }

  .hero-content > :global(*:nth-child(4)) {
    animation-delay: 0.4s;
  }

  .hero-content > :global(*:nth-child(5)) {
    animation-delay: 0.5s;
  }

  .screenshot-container {
    animation: fadeInUp 0.6s ease-out forwards;
    animation-delay: 0.3s;
    opacity: 0;
  }
</style>

---
import Card from '../Card.astro';

const testimonials = [
  {
    quote: "For the first time, I actually know what I can spend without doing mental math or feeling guilty.",
    name: 'Stacy',
    role: 'freelance designer',
  },
  {
    quote: "We've tried every budget app. This is the first one that stuck â€” because it's actually simple.",
    name: 'Randy and Karen',
    role: 'married with 1 son',
  },
  {
    quote: "The Safe to Spend is a great feature. You should call it the 'eliminate arguments' feature.",
    name: 'Joe',
    role: 'married father of 2 boys',
  },
];
---

<section class="py-16 md:py-24 bg-slate-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900">
        People are finding peace.
      </h2>
    </div>

    <div class="mt-12 grid md:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial, index) => (
        <div
          class:list={[
            "relative p-6 rounded-2xl shadow-sm border border-slate-100 hover:shadow-md hover:border-slate-200 transition-all testimonial-card",
            index === 0 && "bg-gradient-to-br from-white to-storehouse-50/50",
            index === 1 && "bg-gradient-to-br from-white to-slate-50/50",
            index === 2 && "bg-gradient-to-br from-white to-emerald-50/50",
          ]}
          style={`--card-index: ${index}`}
        >
          <span class="absolute top-4 left-4 text-7xl text-gold-400/50 leading-none select-none pointer-events-none font-quote" aria-hidden="true">
            "
          </span>
          <div class="relative z-10 flex flex-col h-full">
            <p class="text-slate-700 flex-1 text-lg leading-relaxed pt-6">
              {testimonial.quote}
            </p>
            <div class="mt-6 pt-4 border-t border-slate-200/60">
              <p class="font-semibold text-slate-900">{testimonial.name}</p>
              <p class="text-sm text-slate-500">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .testimonial-card {
    animation: fadeInUp 0.5s ease-out forwards;
    animation-delay: calc(var(--card-index, 0) * 0.15s);
    opacity: 0;
  }
</style>

---
import Card from '../Card.astro';

const testimonials = [
  {
    quote: "For the first time, I actually know what I can spend without doing mental math or feeling guilty.",
    name: '[Name]',
    role: 'freelance designer',
  },
  {
    quote: "We've tried every budget app. This is the first one that stuck â€” because it's actually simple.",
    name: '[Name]',
    role: 'working mom of 3',
  },
  {
    quote: "The Safe to Spend is a great feature. You should call it the 'eliminate arguments' feature.",
    name: 'Joe',
    role: 'married father of 2 boys',
  },
];
---

<section class="py-16 md:py-24 bg-slate-50">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-slate-900">
        People are finding peace.
      </h2>
    </div>

    <div class="mt-12 grid md:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial) => (
        <Card class="flex flex-col">
          <svg class="w-8 h-8 text-storehouse-300 mb-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>
          <p class="text-slate-700 flex-1 italic">
            "{testimonial.quote}"
          </p>
          <div class="mt-6 pt-4 border-t border-slate-100">
            <p class="font-medium text-slate-900">{testimonial.name}</p>
            <p class="text-sm text-slate-500">{testimonial.role}</p>
          </div>
        </Card>
      ))}
    </div>
  </div>
</section>

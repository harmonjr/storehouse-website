---
const productLinks = [
  { href: '/how-it-works', label: 'How It Works' },
  { href: '/foundations', label: 'Foundations' },
  { href: '/philosophy', label: 'Philosophy' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/faq', label: 'FAQ' },
]

const companyLinks = [
  { href: '/our-story', label: 'Our Story' },
  { href: '/blog', label: 'Blog' },
  { href: 'mailto:hello@storehouse.app', label: 'Contact' },
]

const legalLinks = [
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Service' },
]

const currentYear = new Date().getFullYear()
---

<footer class="bg-slate-50 border-t border-slate-200">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="font-display text-2xl text-slate-900 hover:text-storehouse-600 transition-colors">
          Storehouse
        </a>
        <p class="mt-4 text-sm text-slate-600 max-w-xs">
          Biblical financial principles for modern families. Store today. Thrive tomorrow.
        </p>
      </div>

      <!-- Product Links -->
      <div>
        <h3 class="text-sm font-semibold text-slate-900 uppercase tracking-wider">Product</h3>
        <ul class="mt-4 space-y-3" role="list">
          {productLinks.map((link) => (
            <li>
              {link.disabled ? (
                <span class="text-sm text-slate-400 cursor-not-allowed">
                  {link.label}
                  <span class="text-xs ml-1">(Coming Soon)</span>
                </span>
              ) : (
                <a
                  href={link.href}
                  class="text-sm text-slate-600 hover:text-slate-900 transition-colors duration-200"
                >
                  {link.label}
                </a>
              )}
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h3 class="text-sm font-semibold text-slate-900 uppercase tracking-wider">Company</h3>
        <ul class="mt-4 space-y-3" role="list">
          {companyLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-slate-600 hover:text-slate-900 transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal Links -->
      <div>
        <h3 class="text-sm font-semibold text-slate-900 uppercase tracking-wider">Legal</h3>
        <ul class="mt-4 space-y-3" role="list">
          {legalLinks.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-slate-600 hover:text-slate-900 transition-colors duration-200"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-slate-200 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <p class="text-sm text-slate-500">
        &copy; {currentYear} Storehouse. All rights reserved.
      </p>
      <p class="text-sm text-slate-500 italic">
        Store today. Thrive tomorrow.
      </p>
    </div>
  </div>
</footer>

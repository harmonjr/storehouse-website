---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const baseStyles = 'bg-white rounded-2xl p-6 shadow-sm border border-slate-100 hover:shadow-md hover:border-slate-200 transition-all duration-200';

const classes = [baseStyles, className].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>

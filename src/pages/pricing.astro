---
import PageLayout from '../layouts/PageLayout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import MobileNav from '../components/MobileNav.astro'
import Button from '../components/Button.astro'

const features = [
  'Safe to Spend dashboard',
  'Give, Save, Bills priority tracking',
  'Margin reserve monitoring',
  'Subscription tracker',
  'Unlimited account tracking',
  'Weekly balance updates through manual import',
  'Joseph Principle margin building',
  'Giving tracker with annual totals',
]

const faqs = [
  {
    question: 'What is Safe to Spend?',
    answer: "It's the money you can spend freely without worrying about bills, savings goals, or upcoming expenses. One number, total clarity.",
  },
  {
    question: 'How is Storehouse different from other budgeting apps?',
    answer: "Most apps track what you've already spent. Storehouse shows what's truly available after your priorities are handled.",
  },
  {
    question: 'Is there a free trial?',
    answer: 'Yes! You get 14 days free to explore everything. No credit card required to start.',
  },
  {
    question: 'Can I cancel anytime?',
    answer: 'Absolutely. Cancel with one click, no questions asked. Your data remains yours.',
  },
]

const description = "Simple, transparent pricing for Storehouse. Lock in founding member rates and get everything you need for financial peace."
---

<PageLayout title="Pricing | Storehouse" description={description}>
  <Header slot="header" />
  <MobileNav />

  <!-- Hero Section -->
  <section class="relative pt-24 pb-12 overflow-hidden bg-gradient-to-br from-storehouse-50 via-storehouse-100 to-emerald-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto">
        <h1 class="font-display text-4xl sm:text-5xl font-bold text-slate-900 leading-tight">
          Simple pricing. No surprises.
        </h1>
        <p class="mt-6 text-lg sm:text-xl text-slate-600">
          Just like your Safe to Spend number — clear, honest, and easy to understand.
        </p>
      </div>
    </div>

    <!-- Decorative elements -->
    <div class="absolute -z-10 top-20 right-1/4 w-72 h-72 bg-storehouse-200 rounded-full blur-3xl opacity-30"></div>
    <div class="absolute -z-10 bottom-0 left-1/4 w-64 h-64 bg-emerald-200 rounded-full blur-3xl opacity-25"></div>
  </section>

  <!-- Pricing Card Section -->
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-lg px-4 sm:px-6 lg:px-8">
      <div class="relative bg-gradient-to-br from-storehouse-50 to-white border-2 border-storehouse-200 rounded-2xl p-8 shadow-lg">
        <!-- Badge -->
        <div class="absolute -top-4 left-1/2 -translate-x-1/2">
          <span class="inline-flex items-center gap-1.5 bg-gold-500 text-white text-sm font-semibold px-4 py-1.5 rounded-full shadow-md">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Founding Member
          </span>
        </div>

        <p class="mt-4 text-center text-slate-600 text-sm">
          Limited time offer for early supporters
        </p>

        <!-- Pricing -->
        <div class="mt-6 text-center">
          <div class="flex items-baseline justify-center gap-1">
            <span class="text-5xl font-bold text-slate-900">$4.99</span>
            <span class="text-slate-500">/month</span>
          </div>
          <p class="mt-2 text-storehouse-600 font-medium">
            or $49/year <span class="text-slate-500">(save 2 months)</span>
          </p>
        </div>

        <!-- Divider -->
        <div class="my-8 border-t border-storehouse-100"></div>

        <!-- Features -->
        <div class="space-y-1">
          <p class="text-sm font-semibold text-slate-700 mb-4">
            Everything you need for financial peace:
          </p>
          <ul class="space-y-3">
            {features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-storehouse-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-slate-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>

        <!-- CTA -->
        <div class="mt-8">
          <Button href="/waitlist" variant="primary" size="lg" class="w-full">
            Start Free Trial
          </Button>
          <p class="mt-3 text-center text-sm text-slate-500">
            14 days free. Cancel anytime.
          </p>
        </div>

        <!-- Lock-in message -->
        <div class="mt-6 p-4 bg-storehouse-50 rounded-xl border border-storehouse-100">
          <p class="text-sm text-slate-600 text-center">
            <span class="font-medium text-slate-700">Founding member pricing locked in for life</span>
            <br />— even when prices increase.
          </p>
        </div>
      </div>

      <!-- After launch pricing note -->
      <p class="mt-6 text-center text-sm text-slate-500">
        After founding period: $7.99/month or $79/year
      </p>
    </div>
  </section>

  <!-- Social Proof Section -->
  <section class="py-16 bg-gradient-to-br from-storehouse-50 to-emerald-50">
    <div class="mx-auto max-w-xl px-4 sm:px-6 lg:px-8 text-center">
      <p class="text-2xl font-display text-slate-900">
        Built for families and individuals who want financial peace.
      </p>
      <p class="mt-4 text-slate-600">
        Stop stressing about money. Start living with margin.
      </p>
    </div>
  </section>

  <!-- FAQ Preview Section -->
  <section class="py-20 bg-white">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8">
      <h2 class="font-display text-2xl sm:text-3xl font-bold text-slate-900 text-center">
        Common questions
      </h2>

      <div class="mt-12 space-y-6">
        {faqs.map((faq) => (
          <div class="border-b border-slate-100 pb-6">
            <h3 class="font-semibold text-slate-900">{faq.question}</h3>
            <p class="mt-2 text-slate-600">{faq.answer}</p>
          </div>
        ))}
      </div>

      <div class="mt-8 text-center">
        <a
          href="/faq"
          class="inline-flex items-center text-storehouse-600 hover:text-storehouse-700 font-medium transition-colors"
        >
          See all FAQs
          <svg class="ml-2 w-4 h-4" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20 bg-gradient-to-br from-slate-900 to-slate-800">
    <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="font-display text-3xl sm:text-4xl font-bold text-white">
        Ready to find peace with your money?
      </h2>

      <div class="mt-8">
        <Button href="/waitlist" variant="primary" size="lg">
          Start Your Free Trial
        </Button>
      </div>

      <p class="mt-4 text-slate-400 text-sm">
        14 days free. No credit card required to start. Cancel anytime.
      </p>
    </div>
  </section>

  <Footer slot="footer" />
</PageLayout>

---
import { getCollection, render } from 'astro:content';
import FoundationsLayout from '../../layouts/FoundationsLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('foundations');
  const published = posts.filter((p) => p.data.status === 'published');
  return published.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<FoundationsLayout
  title={post.data.title}
  description={post.data.description}
  publishDate={post.data.publishDate}
  author={post.data.author}
  pillar={post.data.pillar}
  articleNumber={post.data.articleNumber}
>
  <Content />
</FoundationsLayout>
